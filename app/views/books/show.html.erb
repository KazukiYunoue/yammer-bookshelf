<div class="row-fluid">
  <div class="span3">
    <div class="thumbnail">
      <%= image_tag @book.image_url %>
    </div>
  </div>

  <div class="span9">
    <div class="well">
      <h1><%= simple_format @book.title %></h1>
    </div>
    <h3><%= @book.author %></h3>
    <h3><%= @book.label %></h3>
    <h3><%= @book.formatted_price %></h3>
    <h3><%= link_to "Amazon", @book.detail_page_url, :target=>["_blank"] %></h3>
  </div>
</div>

<br />

<div class="row-fluid">
  <div class="span8">
      <p>Comments</p>
  </div>

  <div class="span4">
    <div class="well">
      <p>friends with this book</p>
      <% @users.each do |user| %>
        <%= link_to image_tag(user.image, :size => "50x50"), books_path(:user_id => user.id) %>
      <% end %>
    </div>
  </div>
</div>
