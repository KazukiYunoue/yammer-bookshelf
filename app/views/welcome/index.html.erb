<div class="hero-unit">
  <h1>No book and no sharing makes Jonathan a dull boy.</h1>
</div>

<div class="row-fluid">
  <div class="span6">
    <div class="hero-unit">
      <h2><%= link_to "All Books", books_path %></h2>
    </div>
  </div>
  <div class="span6">
    <div class="hero-unit">
      <% if current_user %>
        <h2><%= link_to "Your Books", books_path(:user_id => current_user.id) %></h2>
      <% else %>
        <h2><%= link_to "Sign In", "/auth/yammer"  %></h2>
      <% end %>
    </div>
  </div>
</div>
